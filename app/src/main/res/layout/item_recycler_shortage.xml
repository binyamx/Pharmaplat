<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_background"
            android:padding="5dp">


            <TextView
                android:id="@+id/shortage_item_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/meropenem"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/request_quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shortage_item_name_text_view"
                android:layout_alignStart="@id/shortage_item_name_text_view"
                android:layout_alignLeft="@id/shortage_item_name_text_view"
                android:layout_centerHorizontal="true"
                android:text="@string/_31_requests"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:layout_marginStart="8dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shortage_item_name_text_view"
                android:orientation="horizontal"
                android:layout_toEndOf="@id/shortage_item_name_text_view"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/alive_request_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/alive_request_button_background"
                    android:text="@string/_4_aalive"
                    android:textSize="16sp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/expired_request_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/expired_request_background"
                    android:padding="8dp"
                    android:text="@string/_27_expired"
                    android:textSize="16sp"/>



            </LinearLayout>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>