<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.MakeSelection"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back_24"
            android:padding="8dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_ncode"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:fontFamily="@font/muli_black"
            android:layout_marginTop="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="100dp"
            android:background="@color/ghost_white"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_baseline_phone_android_24"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/mobile_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/via_sms1"
                android:textSize="25sp"
                android:layout_toRightOf="@id/mobile_icon"
                android:fontFamily="@font/muli"
                android:layout_marginTop="35dp"/>
             <TextView                              
                 android:id="@+id/mobile_detail"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/_251912741698"
                 android:textSize="25sp"
                 android:textColor="@color/black"
                 android:layout_toRightOf="@id/mobile_icon"
                 android:layout_below="@id/mobile_tittle"
                 android:fontFamily="@font/muli"/>

            <Button
                android:id="@+id/send_code_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            
        </RelativeLayout>
            






    </LinearLayout>

</ScrollView>